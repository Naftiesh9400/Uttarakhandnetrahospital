rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated via Firebase Auth
    function isAuthenticated() {
      return request.auth != null;
    }

    // Public Read, Admin Write
    match /doctors/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    match /services/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    match /testimonials/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    match /features/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    match /insta_reels/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    match /seo_settings/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Appointments & Contacts: Public Create, Admin Read/Write
    match /appointments/{document=**} {
      allow create: if true;
      allow read, update, delete: if isAuthenticated();
    }
    match /contact_requests/{document=**} {
      allow create: if true;
      allow read, update, delete: if isAuthenticated();
    }
    
    // Admin Only (Strict Security)
    match /admins/{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}