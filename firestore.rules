rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to content collections
    match /doctors/{document=**} { allow read: if true; allow write: if true; }
    match /services/{document=**} { allow read: if true; allow write: if true; }
    match /testimonials/{document=**} { allow read: if true; allow write: if true; }
    match /features/{document=**} { allow read: if true; allow write: if true; }
    match /seo_settings/{document=**} { allow read: if true; allow write: if true; }
    match /settings/{document=**} { allow read: if true; allow write: if true; }
    
    // Allow public creation of appointments and contacts
    match /appointments/{document=**} { 
      allow create: if true;
      allow read, update, delete: if true;
    }
    match /contact_requests/{document=**} { 
      allow create: if true;
      allow read, update, delete: if true;
    }
    
    // Admin collection
    // In production with Firebase Auth, change to: allow read, write: if request.auth != null;
    match /admins/{document=**} { allow read, write: if true; }
  }
}